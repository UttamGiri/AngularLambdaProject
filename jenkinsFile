def VERSION = "${env.BUILD_NUMBER}"
def DIST_ARCHIVE = "dist.${env.BUILD_NUMBER}"
def S3_BUCKET = 'www.dhodekhali.com'
def  AWS_REGION = 'us-east-1'

pipeline {
    agent any
    tools { nodejs "nodejs" }

    stages {
         stage('SCM') {
            steps {
              git credentialsId: '49a873e1-b349-44c0-9c74-080b6563ea74', url: 'https://github.com/UttamGiri/AngularLambdaProject'
            }
        }
        stage('NPM Install') {
            steps {
                sh 'npm install --verbose -d'
            }
        }
        // stage('Test') {
        //     steps {
        //       //  sh 'npm run test'
        //     }
        // }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Archive') {
            steps {
              sh "cd dist && zip -r ../${DIST_ARCHIVE}.zip . && cd .."
              archiveArtifacts artifacts: "${DIST_ARCHIVE}.zip", fingerprint: true
            }
        }
        stage('Deploy') {
            steps {
                sh "aws configure set region ${AWS_REGION}"
                sh "aws s3 cp ${DIST_ARCHIVE}.zip s3://${S3_BUCKET}/${DIST_ARCHIVE}.zip"
                sh "aws deploy create-deployment --application-name AngularLambda --deployment-config-name CodeDeployDefault.AllAtOnce --deployment-group-name angular-deployment-group --s3-location bucket=${S3_BUCKET},bundleType=zip,key=${DIST_ARCHIVE}.zip"
            }
        }
    }

    post {
        always {
            script {
                currentBuild.result = currentBuild.result ?: 'SUCCESS'

                if (currentBuild.result == 'SUCCESS') {
                  echo 'notify slack'
                } else {
                  echo 'notify slack'
                }
            }
        }
    }
}